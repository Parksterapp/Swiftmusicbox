import UIKit

class SettingsViewController: UIViewController, UITableViewDataSource, UITableViewDelegate {

    // MARK: - Properties
    
    var userPreferences: [UserPreference] = [] // Populate this array with actual user preferences data

    // MARK: - UI Components
    
    let preferencesLabel: UILabel = {
        let label = UILabel()
        label.text = "User Preferences"
        label.font = UIFont.systemFont(ofSize: 24, weight: .bold)
        return label
    }()
    
    let preferencesTableView: UITableView = {
        let tableView = UITableView()
        tableView.backgroundColor = .white
        tableView.separatorStyle = .singleLine
        return tableView
    }()

    // MARK: - Lifecycle Methods
    
    override func viewDidLoad() {
        super.viewDidLoad()
        configureUI()
        fetchUserPreferences()
    }

    // MARK: - Private Methods
    
    private func configureUI() {
        view.backgroundColor = .white

        view.addSubview(preferencesLabel)
        view.addSubview(preferencesTableView)

        // Set up constraints (adjust as needed for your layout)
        preferencesLabel.translatesAutoresizingMaskIntoConstraints = false
        preferencesTableView.translatesAutoresizingMaskIntoConstraints = false

        NSLayoutConstraint.activate([
            preferencesLabel.topAnchor.constraint(equalTo: view.safeAreaLayoutGuide.topAnchor, constant: 20),
            preferencesLabel.leadingAnchor.constraint(equalTo: view.leadingAnchor, constant: 20),
            
            preferencesTableView.topAnchor.constraint(equalTo: preferencesLabel.bottomAnchor, constant: 10),
            preferencesTableView.leadingAnchor.constraint(equalTo: view.leadingAnchor),
            preferencesTableView.trailingAnchor.constraint(equalTo: view.trailingAnchor),
            preferencesTableView.bottomAnchor.constraint(equalTo: view.bottomAnchor),
        ])

        preferencesTableView.dataSource = self
        preferencesTableView.delegate = self

        // Register custom cell
        preferencesTableView.register(UserPreferenceTableViewCell.self, forCellReuseIdentifier: "UserPreferenceCell")
    }

    private func fetchUserPreferences() {
        // Fetch and populate user preferences data
        // Replace this with your actual data fetching logic
        // For example, you might fetch user preferences from a database or API
        // In this example, we're using a sample array
        userPreferences = [
            UserPreference(title: "Receive Event Notifications", isSwitchOn: true),
            UserPreference(title: "Show Recommended Artists", isSwitchOn: true),
            UserPreference(title: "Enable Dark Mode", isSwitchOn: false),
            // Add more user preferences as needed
        ]

        // Reload the table view to reflect the updated data
        preferencesTableView.reloadData()
    }

    // MARK: - UITableViewDataSource Methods

    func tableView(_ tableView: UITableView, numberOfRowsInSection section: Int) -> Int {
        return userPreferences.count
    }

    func tableView(_ tableView: UITableView, cellForRowAt indexPath: IndexPath) -> UITableViewCell {
        guard let cell = tableView.dequeueReusableCell(withIdentifier: "UserPreferenceCell", for: indexPath) as? UserPreferenceTableViewCell else {
            return UITableViewCell()
        }

        let userPreference = userPreferences[indexPath.row]
        cell.configure(with: userPreference)

        return cell
    }

    // MARK: - UITableViewDelegate Methods

    func tableView(_ tableView: UITableView, heightForRowAt indexPath: IndexPath) -> CGFloat {
        return 80
    }

    func tableView(_ tableView: UITableView, didSelectRowAt indexPath: IndexPath) {
        tableView.deselectRow(at: indexPath, animated: true)

        // Handle user's selection, e.g., update user preferences
        let selectedPreference = userPreferences[indexPath.row]
        print("Selected preference: \(selectedPreference.title)")
        // Implement your logic for handling the selected preference
    }
}
